---
import { marked } from 'marked';
import Button from './Button.astro';
import siteConfig from '../data/site-config';

const hero = siteConfig.hero;
---

{
    (hero?.title || hero?.image?.src || hero?.text || (hero?.actions && hero.actions.length > 0)) && (
        <section class="w-full flex flex-col gap-8 mb-16 sm:mb-24">
            {hero.image?.src && (
                <figure>
                    <img class="w-full" src={hero.image.src} loading="lazy" decoding="async" alt={hero.image.alt || ''} />
                    {hero.image.caption && <figcaption class="mt-1.5 text-xs sm:text-sm">{hero.image.caption}</figcaption>}
                </figure>
            )}
            <div class="max-w-none prose prose-dante sm:prose-lg">
                <p>
                    I am a PhD candidate in the Department of Economics. My main fields of interest are development, labour, and environmental economics.
                    Originally from India, I hold a BA. (Hons.) in Economics from Miranda House (University of Delhi) and an MA in International and Development
                    Economics from{' '}
                    <a href="https://economics.yale.edu/international-and-development-economics" target="_blank" referrerpolicy="no-referrer">
                        Yale University.
                    </a>{' '}
                    I was previously a pre-doctoral fellow at Tobin Centre for Economic Policy at Yale University.
                </p>
                <p>
                    PhD Student Affiliate:{' '}
                    <a href="https://cssh.northeastern.edu/gap/" target="_blank" referrerpolicy="no-referrer">
                        Global Action for Policy (GAP) Initiative,
                    </a>{' '}
                    Northeastern University.
                </p>
            </div>
            {hero.actions && hero.actions.length > 0 && (
                <div class="flex flex-wrap gap-4">
                    {hero.actions.map((action) => (
                        <Button href={action.href}>{action.text}</Button>
                    ))}
                </div>
            )}
        </section>
    )
}
